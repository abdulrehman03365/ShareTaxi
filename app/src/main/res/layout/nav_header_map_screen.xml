<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="top|center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/Black"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


   <de.hdodenhof.circleimageview.CircleImageView

       android:id="@+id/Riderimage"
       android:layout_width="83dp"
       android:layout_height="78dp"
       android:layout_centerHorizontal="true"
       android:src="@drawable/user"
       />


    <TextView
        android:id="@+id/RiderNameid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/Riderimage"
        android:layout_alignLeft="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="1dp"
        android:text="RiderName"
        android:textColor="@color/White"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Ratingid"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/RiderNameid"
        android:layout_alignEnd="@id/RiderNameid"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-2dp"

        android:layout_marginEnd="27dp"
        android:layout_marginRight="-28dp"
        android:drawableLeft="@drawable/ic_star_black_24dp"
        android:text="5"
        android:textColor="@color/White"
        android:textSize="30dp"
        android:textStyle="bold" />

</RelativeLayout>
