<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
     android:background="@color/White"
    android:layout_height="match_parent"
    tools:context=".PhoneAuthentication">


    android:background="@color/light"

    <EditText
        android:id="@+id/authtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="72dp"
        android:layout_marginTop="57dp"
        android:drawableLeft="@drawable/ic_smartphone_black_24dp"
        android:ems="10"
        android:hint="@string/Auth_code"
        android:inputType="number"
        android:textColorHint="@color/White"
        android:visibility="gone" />

    <Button
        android:id="@+id/Verifybt"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp"
        android:background="@drawable/bordertheme"
        android:text="@string/verify"
        android:textSize="17dp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Verifybt"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bordertheme"
        android:text="Submit" />

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/EnterText"
        android:layout_marginStart="27dp"
        android:gravity="center_vertical">

        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ccp_autoDetectCountry="true" />

        <EditText
            android:id="@+id/editText_carrierNumber"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:editable="false"
            android:hint="3024567823"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/EnterText"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:text="Enter your mobile number"
        android:textColor="@color/Black"
        android:textSize="25dp"
        android:textStyle="normal" />

</RelativeLayout>