<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
   android:background="@color/light"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/Loginbt"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86dp"
        android:textSize="18sp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="@string/Loginbt" />

    <Button
        android:id="@+id/Signupbt"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="24dp"
        android:background="@color/light"
        android:text="Dont have account Signup"
        android:visibility="gone" />

    <Button
        android:id="@+id/LoginwithEmailbt"
    android:drawableLeft="@drawable/ic_email_black_24dp"
android:backgroundTint="@color/light"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="244dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="Login with Email" />

    <Button
        android:id="@+id/LoginwithPhonebt"
        android:layout_width="178dp"
        android:drawableLeft="@drawable/ic_smartphone_black_24dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="183dp"
        android:background="@drawable/border"
        android:backgroundTint="@color/light"
        android:gravity="center"
        android:text="Login with Phone" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="Shared Car"
        android:textColor="@color/White"
        android:textSize="40dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="76dp"
        android:layout_height="69dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="121dp"
        app:srcCompat="@drawable/ic_local_taxi_black_24dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="40dp"
        android:text="Dont Have a Account ?"
        android:textColor="@color/White"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/Signuptxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-40dp"

        android:text="Sign Up"
        android:textColor="@color/White"
        android:textSize="17dp"
        android:textStyle="bold" />

</RelativeLayout>